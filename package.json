{
  "name": "quest-designer",
  "version": "0.1.0",
  "description": "A visual node-based quest design tool for game developers",
  "main": "dist-electron/main.js",
  "author": "Quest Designer Team",
  "license": "MIT",
  "overrides": {
    "glob": "^13.0.0",
    "rimraf": "^6.0.0",
    "inflight": "npm:lru-cache@^11.0.0",
    "global-agent": "^4.1.2"
  },
  "scripts": {
    "dev": "vite",
    "dev:electron": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@xyflow/react": "^12.0.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.312.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.4.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.questdesigner.app",
    "productName": "Quest Designer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
